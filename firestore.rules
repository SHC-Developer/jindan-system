rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자: 로그인한 사용자만 읽기 (업무 지시 시 직원 목록용), 쓰기는 배포 스크립트만
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // 업무 지시: tasks 전역 컬렉션 (assignee: 완료 제출/첨부, createdBy: 승인/재검토/삭제)
    match /tasks/{taskId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.assigneeId == request.auth.uid || resource.data.createdBy == request.auth.uid);
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // 알림: 본인 것만 읽기/수정, 생성은 누구나(지시·완료 시), 삭제는 본인 또는 관리자(관리자 페이지 일괄 삭제용)
    match /users/{userId}/notifications/{notificationId} {
      allow read, update: if request.auth != null
        && (request.auth.uid == userId
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null;
      allow delete: if request.auth != null
        && (request.auth.uid == userId
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // 출퇴근 기록: 로그인 사용자 읽기/생성. 수정은 본인(clockOutAt만) 또는 관리자(status, approvedBy, approvedAt만)
    match /workLogs/{logId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth != null
        && (resource.data.userId == request.auth.uid
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow delete: if false;
    }

    // 채팅: 로그인한 사용자만 프로젝트/중메뉴/메시지 읽기·쓰기
    // 프로젝트: 읽기·생성은 로그인 사용자, 수정·삭제는 관리자만
    match /projects/{projectId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      match /subMenus/{subMenuId} {
        allow read: if request.auth != null;
        match /messages/{messageId} {
          allow read, create: if request.auth != null;
          allow update: if false;
          // 관리자는 모든 메시지 삭제, 일반 사용자는 본인 발신 메시지만 삭제
          allow delete: if request.auth != null
            && (resource.data.senderId == request.auth.uid
                || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        }
        // 공지 고정 목록 (pinnedMessageIds)
        match /channelMeta/{docId} {
          allow read, write: if request.auth != null;
        }
      }
    }
  }
}
